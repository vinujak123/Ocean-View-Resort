{
    "openapi": "3.0.3",
    "info": {
        "title": "Ocean View Resort API",
        "description": "Distributed Reservation System for Ocean View Resort",
        "version": "1.0.0",
        "contact": {
            "name": "Ocean View Resort",
            "email": "info@oceanviewresort.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:8081",
            "description": "Local development server"
        }
    ],
    "tags": [
        {
            "name": "Reservations",
            "description": "Reservation management endpoints"
        }
    ],
    "paths": {
        "/api/reservations": {
            "get": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Get all reservations",
                "description": "Retrieve a list of all reservations in the system",
                "operationId": "getAllReservations",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Reservation"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Create a new reservation",
                "description": "Create a new reservation with automatic reference ID and bill calculation",
                "operationId": "createReservation",
                "requestBody": {
                    "description": "Reservation object to be created",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ReservationInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Reservation created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Reservation"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input or validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/reservations/{refId}": {
            "get": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Get reservation by reference ID",
                "description": "Retrieve a specific reservation by its reference ID",
                "operationId": "getReservationByRefId",
                "parameters": [
                    {
                        "name": "refId",
                        "in": "path",
                        "description": "Reference ID of the reservation",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "1001"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Reservation"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Reservation not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/reservations/stats": {
            "get": {
                "tags": [
                    "Reservations"
                ],
                "summary": "Get reservation statistics",
                "description": "Retrieve statistics including total bookings, revenue, and occupancy rate",
                "operationId": "getStats",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Statistics"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Reservation": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "referenceId": {
                        "type": "string",
                        "example": "1001"
                    },
                    "guestName": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "address": {
                        "type": "string",
                        "example": "123 Main Street, City"
                    },
                    "phone": {
                        "type": "string",
                        "example": "1234567890"
                    },
                    "roomType": {
                        "$ref": "#/components/schemas/RoomType"
                    },
                    "boardType": {
                        "$ref": "#/components/schemas/BoardType"
                    },
                    "checkInDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2026-03-01"
                    },
                    "checkOutDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2026-03-05"
                    },
                    "totalBill": {
                        "type": "number",
                        "format": "double",
                        "example": 140000.0
                    }
                }
            },
            "ReservationInput": {
                "type": "object",
                "required": [
                    "guestName",
                    "phone",
                    "roomType",
                    "boardType",
                    "checkInDate",
                    "checkOutDate"
                ],
                "properties": {
                    "guestName": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "address": {
                        "type": "string",
                        "example": "123 Main Street, City"
                    },
                    "phone": {
                        "type": "string",
                        "example": "1234567890"
                    },
                    "roomType": {
                        "$ref": "#/components/schemas/RoomType"
                    },
                    "boardType": {
                        "$ref": "#/components/schemas/BoardType"
                    },
                    "checkInDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2026-03-01"
                    },
                    "checkOutDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2026-03-05"
                    }
                }
            },
            "RoomType": {
                "type": "string",
                "enum": [
                    "STANDARD",
                    "DELUXE",
                    "SUITE"
                ],
                "description": "Room type with rates: STANDARD (15000.0), DELUXE (25000.0), SUITE (45000.0)"
            },
            "BoardType": {
                "type": "string",
                "enum": [
                    "BB",
                    "HB",
                    "FB"
                ],
                "description": "Board type with rates: BB (Bed & Breakfast, 0.0), HB (Half Board, 5000.0), FB (Full Board, 10000.0)"
            },
            "Statistics": {
                "type": "object",
                "properties": {
                    "totalBookings": {
                        "type": "integer",
                        "example": 10
                    },
                    "totalRevenue": {
                        "type": "number",
                        "format": "double",
                        "example": 1500000.0
                    },
                    "occupancyRate": {
                        "type": "string",
                        "example": "85%"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Error message"
                    }
                }
            }
        }
    }
}